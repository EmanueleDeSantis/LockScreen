<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LockScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textViewNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="@string/insert_notes"
            android:textColor="@color/custom_green"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:gravity="center">

            <Button
                android:id="@+id/buttonDo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10sp"
                android:background="@drawable/round"
                android:text="@string/Do"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/buttonDodie"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10sp"
                android:background="@drawable/round"
                android:text="@string/Dodie"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/buttonRe"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10sp"
                android:background="@drawable/round"
                android:text="@string/Re"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <Button
                android:id="@+id/buttonRedie"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10sp"
                android:background="@drawable/round"
                android:text="@string/Redie"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/buttonMi"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10sp"
                android:background="@drawable/round"
                android:text="@string/Mi"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/buttonFa"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10sp"
                android:background="@drawable/round"
                android:text="@string/Fa"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <Button
                android:id="@+id/buttonFadie"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10sp"
                android:background="@drawable/round"
                android:text="@string/Fadie"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/buttonSol"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10sp"
                android:background="@drawable/round"
                android:text="@string/Sol"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/buttonSoldie"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10sp"
                android:background="@drawable/round"
                android:text="@string/Soldie"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <Button
                android:id="@+id/buttonLa"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10sp"
                android:background="@drawable/round"
                android:text="@string/La"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/buttonLadie"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10sp"
                android:background="@drawable/round"
                android:text="@string/Ladie"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/buttonSi"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10sp"
                android:background="@drawable/round"
                android:text="@string/Si"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="ButtonStyle" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>