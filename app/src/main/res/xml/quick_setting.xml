<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/warnings_title" app:iconSpaceReserved="false">
        <Preference
            app:selectable="false"
            app:layout="@layout/quick_setting" />
    </PreferenceCategory>

    <PreferenceCategory>
        <SwitchPreference
            app:key="@string/quick_setting_switch_enabled_shared_pref"
            app:title="@string/lock_device_when_quick_setting_enabled"
            app:summaryOn="@string/enabled"
            app:summaryOff="@string/disabled"
            app:defaultValue="@string/disabled"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>

</PreferenceScreen>