<?xml version="1.0" encoding="utf-8"?>
<!-- modified code got from -->
<!-- https://stackoverflow.com/questions/54624722/how-to-achieve-android-button-animation-with-text-blurred-and-shadow?answertab=active#tab-top -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"
        android:state_selected="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:color="@color/teal_200"
                        android:width="2dp" />
                </shape>
            </item>
            <item android:bottom="2dp">
                <shape android:shape="rectangle">
                    <padding android:left="2dp" />
                    <gradient android:angle="270" android:startColor="#2196F3" android:endColor="#163969" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:color="#102746"
                        android:width="2dp" />
                </shape>
            </item>
            <item android:bottom="2dp">
                <shape android:shape="rectangle">
                    <padding android:left="2dp" />
                    <gradient android:angle="270" android:startColor="#2196F3" android:endColor="#163969" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>